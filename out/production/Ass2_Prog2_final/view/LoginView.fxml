<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox alignment="CENTER" styleClass="background" prefWidth="540.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <ImageView fitWidth="540" fitHeight="300">
        <Image url="/view/image/banner.png"/>
    </ImageView>

    <VBox alignment="CENTER" prefWidth="540.0" spacing="10">
        <Separator/>
        <Label text="Login" styleClass="heading"/>
        <Separator/>
        <HBox alignment="CENTER" spacing="10">
            <Label text="Manager ID: "/>
            <TextField fx:id="managerTf"/>
        </HBox>
        <HBox>
            <Button fx:id="loginButton" onAction="#handleLogin" styleClass="button" prefWidth="270" HBox.hgrow="ALWAYS" text="Login"/>
            <Button fx:id="exitButton" onAction="#handleExit" styleClass="button" prefWidth="270" HBox.hgrow="ALWAYS" text="Exit"/>
        </HBox>
    </VBox>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
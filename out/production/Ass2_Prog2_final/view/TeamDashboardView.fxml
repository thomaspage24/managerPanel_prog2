<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>

<VBox alignment="CENTER" styleClass="background" prefWidth="540.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TeamDashboardController">
    <ImageView fitWidth="540" fitHeight="300">
        <Image url ="/view/image/banner.png"/>
    </ImageView>

    <VBox alignment="CENTER" prefWidth="540" spacing="10">
        <Separator/>
        <Label fx:id="teamNameLbl" styleClass="heading"/>
        <Separator/>
        
        <HBox alignment="CENTER" spacing="10">
            <Label text="Sign a new player:"/>
            <TextField fx:id="enterPlayerTf"/>
            <Button fx:id="signBtn" onAction="#handleSign" disable="true" styleClass="button" prefWidth="65" text="Sign"/>
        </HBox>

        <Separator/>

        <HBox> 
            <!-- player list-->
            <VBox spacing="5" alignment="CENTER">
                <TableView fx:id="playersTv" prefWidth="300" prefHeight="400">
                    <columns>
                        <TableColumn prefWidth="150" fx:id="playerColumn" text="Player">
                            <cellValueFactory><PropertyValueFactory property="fullName"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="150" fx:id="positionColumn" text="Position">
                            <cellValueFactory><PropertyValueFactory property="position"/></cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </VBox>

            <VBox spacing ="10" alignment="CENTER">
                <Label styleClass="activeTeamHeader" text="Active Team"/>
                <GridPane fx:id="teamJerseyGrid" hgap="10" vgap="10"/>

            </VBox>
        </HBox>
        <HBox>
            <Button disable="true" styleClass="button" fx:id="unsignBtn" text="Unsign" prefWidth="270" />
            <Button styleClass="button" fx:id="closeBtn" text="Close" prefWidth="270"/>
        </HBox>


    </VBox>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox alignment="CENTER" styleClass="background" prefWidth="540.0" xmlns:fx="http://javafx.com/fxml/1">
    <ImageView fitWidth="540" fitHeight="300">
        <Image url="/view/image/error.png"/>
    </ImageView>

    <VBox alignment="CENTER" prefWidth="540.0" spacing="10">
        <Separator/>
        <Label fx:id="exceptionText" text="Insert Exception" styleClass="error"/>
        <Separator/>
        <HBox alignment="CENTER" spacing="10">
            <Label text="Insert error message"/>
        </HBox>
        <HBox alignment="CENTER">
            <Button fx:id="closeButton" onAction="#handleClose" styleClass="button" prefWidth="540" HBox.hgrow="ALWAYS" text="close"/>
        </HBox>
    </VBox>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>

</VBox>